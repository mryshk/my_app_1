<div class="container">
  <h1 class="mt-3 ml-4" id="area-1"><i class="fas fa-music">&nbsp;Group detail</i></h1>
  <div class="row mt-4">
    <div class="col-8 my-4 offset-2">
      <div class="card mt-4 shadow-lg h-70">
        <%= attachment_image_tag @group, :image ,size:"200x200", fallback: "no_image.jpg",class:"mt-3 rounded-circle mx-auto"  %>
        <div class="card-body p-5">
          <h4 class="card-title"><strong><%= @group.name  %></strong></h4>
          <p class="card-text"><%= @group.introduction  %></p>
          <button class="btn"><%= link_to group_group_users_path(@group) do %><%= @group.users.count %><% end %></button>



           <% if @group.owner_id == current_user.id %>
             <button type="button" class="btn "> <%= link_to edit_group_path(@group),class: "text-info" do%><i class="fas fa-edit">Edit</i><% end %></button>
             <button type="button" class="btn "><%= link_to group_path(@group),method: :delete, "data-confirm" => "Do you really delete?",class: "text-danger" do%><i class="fas fa-trash-alt">Delete</i><% end %></button>
           <% end %>
           <% if @group.joined_by?(current_user)  %>
             <button type="button" class="btn "><%= link_to group_group_user_path(@group.id),method: :delete,class: "text-danger" do%><i class="fas fa-trash-alt">Leave this Group</i><% end %></button>
           <% else %>
             <button type="button" class="btn "> <%= link_to group_group_users_path(@group.id),method: :post ,class: "text-info" do%><i class="fas fa-edit">Join this Group</i><% end %></button>
           <% end %>

        </div>
      </div>
    </div>
  </div>

  <div class="row yt-5">
    <div class="col-2">
       <button class="btn btn-primary">
         <%= link_to :back ,class: "text-light" do%><i class="fas fa-backward">&nbsp;Back</i><% end %>
       </button>
    </div>
  </div>
</div>



