<div  class="container" style="margin-top:200px;">
  <h1 class="my-4 text-center"><i class="fas fa-users">Groups</i></h1>
  <div class="row">
    <div class="card">
      <% @groups.each do |group| %>
        <div class="col-4">
          <%= attachment_image_tag group,:image ,size:"50x50", fallback: "no_image.jpg",class:"mt-3 rounded-circle" %>
        </div>
        <div class="col-8">
          <div>
            <%= link_to group_path(group) do %>
            <h4 class="card-title"><strong><%= group.name %></strong></h4>
            <% end %>
          </div>
          <div>
            <p class="card-textã€€text-wrap"><%= group.introduction %></p>
          </div>
        </div>
      <% end %>
      <%= link_to new_group_path do %>
      <button class="btn btn-block  text-info" style="margin-top:150px; margin-bottom:150px;"><h3><i class="fas fa-users-cog">NEW Group</i></h3></button>
      <% end %>
    </div>
  </div>
</div>