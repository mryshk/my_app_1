<div class="container mt-4">
  <h1><i class="fas fa-edit">&nbsp;EditMusics</i></h1>
  <div class="row">
    <div class="col-8 offset-2">
      <%= form_with model: @music, local: true do |f| %>
      <div class="mt-3">
        <label>Musician's Name</label>
        <%= f.text_field :music_name ,class: "form-control"%>
      </div>
      <div class="mt-3">
        <label for="music_caption">Musician’s Caption</label>
        <%= f.text_area :music_caption ,class: "form-control" %>
      </div>
      <div class="mt-3">
        <label for="music_url">Musician's Musicvideo</label>
        <%= f.text_field :music_url ,class: "form-control" %>
      </div>
      <div>
        <div class="mb-2 mt-3"><strong>Musician's Genre</strong></div>
        <%= f.radio_button :music_genre,"Rock" %>Rock
        <%= f.radio_button :music_genre,"POP" %>POP
        <%= f.radio_button :music_genre,"Pank" %>Pank
        <%= f.radio_button :music_genre,"Idle" %>Idle
        <%= f.radio_button :music_genre,"EDM" %>EDM
        <small class="form-text text-muted mt-2">Please check your music genre</small>
      </div>
      <div id="star" class="mb-2 mt-3">
        <%= f.label :rate,'Rate' %>
        <%= f.hidden_field :rate,id: :review_star %>
      </div>
      <script>
        $(document).on('turbolinks:load', function(){
          $('#star').raty({
         starOn: "<%= asset_path('star-on.png') %>",
         starOff: "<%= asset_path('star-off.png') %>",
         starHalf: "<%= asset_path('star-half.png') %>",
         scoreName: 'music[rate]' //登録するモデル名とカラム名を記述
         });
        });
      </script>
      <div class="mt-3">
        <label for="musicimage">Musician's Image</label>
        <%= f.attachment_field :musicimage ,class: "form-control-file"%>
      </div>
      <div class="mt-3">
        <button class="btn btn-info mt-3">
          <i class="fas fa-edit">&nbsp;Update</i>
          <% f.submit %>
        </button>
      </div>
      <% end %>
    </div>
  </div>
</div>




