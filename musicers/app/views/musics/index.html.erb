<h1 class="mt-3"><i class="fas fa-headphones-alt">Musics</i></h1>
<div class="container">
 <div class="row mt-4">
 <% @musics.each do |music| %>
 <div class="col-4 my-4">
    <div class="card mt-4 shadow-lg h-100">
      <%= link_to music_path(music) do %>
      <%= attachment_image_tag music, :musicimage,class:"card-img-top "%>
      <% end %>
    <div class="card-body">
        <p class="card-title">Musician's Name:<%= music.music_name %></p>
        <p class="card-text　text-wrap">Musician’s Caption:<%= music.music_caption %></p>
        <p class="card-text">Musician's Musicvideo:<%= music.music_url %></p>
        <p class="card-text">Date:<%= music.created_at.strftime('%Y/%m/%d') %></p>
        <%= link_to "Show detail", music_path(music),class:"card-link"%>
    </div>
    </div>
  </div>
  <% end %>
 </div>
</div>
