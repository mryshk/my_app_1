<div class="container">
  <h1 class="mt-3"><i class="fas fa-user">Mypage</i></h1>
  <div class="row">
    <div class="col-4 mx-auto">
      <div class="mt-3">
        <img>
        <%= attachment_image_tag @user, :profile_image, :fill, 300, 300, fallback: "no_image.jpg",size: "300x300",class: "my-3 rounded-circle" %>
        </img>
        <i><strong><%= @user.name %></strong></i>
      </div>
      <div class="mt-3">
        <div></div>
        <strong><%= @user.introduction %></strong>
      </div>

    </div>
  </div>
  <div>
    <button class="btn btn-info">
      <%= link_to edit_user_path(current_user),class: "text-light" do%><i class="fas fa-user-edit">Edit</i><% end %>
    </button>
  </div>
  <div>
    <button class="btn btn-primary">
      <%= link_to :back ,class: "text-light" do%><i class="fas fa-backward">Back</i><% end %>
    </button>
  </div>
</div>







